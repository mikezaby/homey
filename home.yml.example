sym_links:
  - target: i3
    link: ~/.i3

  - target: Xdefaults
    link: ~/.Xdefaults

  - target: ! "gitconfig.%{flavor}"
    link: ~/.gitconfig

  - target: vimrc
    link: ~/.vimrc

  - target: zshrc
    link: ~/.zshrc

commands:
  - wget --no-check-certificate https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O - | zsh
